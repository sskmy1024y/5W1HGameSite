{
  "root": true,
  "env": {
    "node": true
  },
  "extends": [
    "plugin:vue/essential",
    "eslint:recommended"
  ],
  "rules": {
    "semi": [
      "off",
      "never"
    ],
    "no-extra-semi": "error",
    "quotes": [
      "warn",
      "single"
    ]
  },
  "parserOptions": {
    "parser": "babel-eslint"
  }
}
